name: "Release version to org"
on:
    workflow_dispatch:
        inputs:
            pathToReleaseDef:
                description: "Path to release definition file"
                required: true
                type: string
            org:
                description: "Org (prod, preprod, dev, uat, sit)"
                required: true
                type: string
jobs:
    cdReleaseToOrg:
        name: "Release to org"
        uses: navikt/crm-workflows-base/.github/workflows/cdReleaseToOrg.yml@dxAtScale
        permissions:
            contents: write
        secrets: inherit
        with:
            pathToReleaseDef: ${{ github.pathToReleaseDef }}
            org: ${{ inputs.org }}